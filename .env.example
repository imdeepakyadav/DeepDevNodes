# deepdevnodes API Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Keys (Get these from respective services)
# Alpha Vantage API Key (for stock data)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# GitHub Personal Access Token (optional, for higher rate limits)
# Create token at: https://github.com/settings/tokens
# Required scopes: public_repo
GITHUB_TOKEN=your_github_token_here

# NASA API Key (optional, for APOD data)
# Get API key at: https://api.nasa.gov/
NASA_API_KEY=your_nasa_api_key_here

# Database Configuration (if using a database)
# DATABASE_URL=postgresql://username:password@localhost:5432/deepdevnodes
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
JWT_SECRET=your_super_secret_jwt_key_here
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_METRICS=true

# Development
DEBUG=false
DEV_MODE=true

# External Services
# SLACK_WEBHOOK_URL=your_slack_webhook_for_notifications
# DISCORD_WEBHOOK_URL=your_discord_webhook_for_notifications

# Cache Configuration
CACHE_TTL=3600
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SSL/TLS (for production)
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_CERT_PATH=/path/to/ssl/cert.pem

# Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# Performance
# MAX_WORKERS=4
# REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_CACHE=true
ENABLE_RATE_LIMIT=true

# Third-party Integrations
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret